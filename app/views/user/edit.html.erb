<div class = "container">

  <div class = "row">
    <div class = "col-lg-3">
      <%= image_tag @user.image_url(:profile).to_s  %>
    </div>
    <div class = "col-lg-6 ">
      <h1><%= @user.email%></h1>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-3">
      <h3>Change Photo</h3>

      <%= simple_form_for @user,url: user_path(@user), :html => { :class => 'form-horizontal' } do |f| %>

      <%= f.file_field :image, :class => 'btn btn-default' %>
      <%= error_span(@user[:image]) %>
    </div>
    </div>

    <div class = "row">
      <div class = "col-lg-3 center">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      user_path, :class => 'btn btn-default' %>
      <% end %>
    </div>
    </div>
  </div>
